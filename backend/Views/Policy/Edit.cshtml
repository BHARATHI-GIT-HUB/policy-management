@model RepositryAssignement.Models.PolicyEnrollment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CustomeLayout.cshtml";
    string? ErrorMesssage = TempData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <title>Policy Enrollment Edit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Global styling */
        input[type="text"],
        input[type="number"],
        input[type="date"],
        input[type="email"],
        input[type="password"],
        textarea {
            background-color: transparent;
            border: none;
            border-bottom: 1px solid #ced4da; 
            outline: none; 
            padding: 0.375rem 0.75rem; 
            font-size: 0.875rem; 
        }
     
            input[type="text"]:focus,
            input[type="number"]:focus,
            input[type="date"]:focus,
            input[type="email"]:focus,
            input[type="password"]:focus,
            textarea:focus {
                border-bottom: 1px solid #007bff; 
             
            }

        input {
            height: 5px
        }
    </style>
</head>
<body >
    <h4>Policy Enrollment Edit</h4>
    @if (!string.IsNullOrEmpty(ErrorMesssage))
    {

        <div class="alert alert-danger d-flex gap-3 align-items-center position-absolute" style="right:2px; top:-12px;z-index:20" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle-fill text-danger" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
            </svg>           <div>
                @ErrorMesssage
            </div>
        </div>

    }
        <form asp-action="Edit" method="post">
        
            <input asp-for="PlanId" class="form-control" value="@Model.PlanId" style="display:none" />
            <input asp-for="ClientId" class="form-control" value="@Model.ClientId" style="display:none" />
            <input asp-for="AgentId" class="form-control" value="@Model.AgentId" style="display:none" />
    
      
  

        <div class="p-3 bg-red rounded-3 shadow my-3 bg-white">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Attribute</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Plan Name</td>
                        <td>@Html.DisplayFor(model => model.Plan.PlanName)</td>
                    </tr>
                    <tr>
                        <td>Agent Name</td>
                        <td>@Html.DisplayFor(model => model.Agent.User.Username)</td>
                    </tr>
                    <tr>
                        <td>Client Name</td>
                        <td>@Html.DisplayFor(model => model.Client.User.Username)</td>
                    </tr>
                    <tr>
                        <td>Provider Name</td>
                        <td>@Html.DisplayFor(model => model.Plan.Provider.User.Username)</td>
                    </tr>
                    <tr>
                        <td>Coverage Amount</td>
                        <td>          
                                <input asp-for="CoverageAmount" class="form-control" value="@Model.CoverageAmount" />                       
                        </td>
                    </tr>
                    <tr>
                        <td>Frequency</td>
                        <td>
                           
                                <input asp-for="Frequency" class="form-control" value="@Model.Frequency" />
                            
                        </td>
                    </tr>
                    <tr>
                        <td>Time Period</td>
                        <td>

                            <input asp-for="TimePeriod" class="form-control" value="@Model.TimePeriod" />

                        </td>
                    </tr>
                    <tr>
                        <td>Premium</td>
                        <td>@Model.Premium</td>     
                    </tr>

                    <tr>
                        <td>Commission Amount</td>
                        <td>
                                <input asp-for="CommisionAmount" class="form-control" value="@Model.CommisionAmount" />                          
                        </td>
                    </tr>

                    <tr>
                        <td>Enrolled On</td>
                       
                        <td>@Model.EnrolledOn</td>
                    </tr>

                    <tr>
                        <td>Cancelled On</td>
                        <td>
                            @if (Model != null && Model.CancelledOn != null)
                            {
                                <input asp-for="CancelledOn" class="form-control" value="@Model.CancelledOn" />
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                    </tr>

                    <tr>
                        <td>Expired On</td>
                        <td>
                           @Model.EnrolledOn
                        </td>
                    </tr>

                </tbody>
            </table>
            @if (!string.IsNullOrEmpty(ErrorMesssage))
            {
                <button type="submit" class="btn btn-primary" disabled>Save</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary">Save</button>
                
            }
            
            
        </div>
        
    </form>
   

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
