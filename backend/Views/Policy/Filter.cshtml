@model IEnumerable<RepositryAssignement.Models.PolicyEnrollment>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_CustomeLayout.cshtml";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Protest+Riot&display=swap" rel="stylesheet">
<style>
    a {
        color: inherit; /* Use the color inherited from the parent */
        text-decoration: none; /* Remove default underline */
    }

    .inter {
        font-family: "Inter", sans-serif;
        font-weight: 600;
        font-style: normal;
    }
</style>
<div class="d-flex justify-content-between align-items-center my-3 inter ">
    <h1>All Enrolled Policy</h1>
    <div class="d-flex flex-column flex-sm-row justify-content-center  align-items-center gap-3">
        <div class="btn btn-primary text-primary d-flex align-items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="white" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
            </svg>
            <a asp-action="Index" class="text-white">Create</a>

        </div>

        @*  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-down-circle-fill text-primary" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z" />
        </svg> *@
        <div class="btn btn-primary text-primary d-flex align-items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" fill="white" class="bi bi-arrow-down-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z" />
            </svg>
            @using (Html.BeginForm("Export", "Policy", FormMethod.Post))
            {
                <input type="submit" value="Report" class="bg-primary border-0 text-white" />
            }
        </div>

    </div>
</div>

@using (Html.BeginForm("Filter", "policy", FormMethod.Post, new { @class = "my-4 d-flex  gap-4 align-items-center justify-content-center justify-content-sm-start" }))
{

    @Html.DropDownList("SelectedValue", (IEnumerable<SelectListItem>)ViewBag.Options, "Select Option", new { @class = "form-control w-50" })

    <button type="submit" class="btn btn-primary ">Submit</button>
}
<div class="p-3 bg-red rounded-3 shadow table-responsive bg-white">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>
                    Plan Name
                </th>
                <th>
                    <div class="d-flex">
                        Coverage Amount
                        <form id="cardForm" asp-action="DescOrder" method="post">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up-short " onclick="submitForm()" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5" />
                            </svg>
                        </form>
                    </div>

                </th>
                <th>
                    Frequency
                </th>
                <th>
                    Time Period
                </th>
                <th>
                    Premium
                </th>
                <th>
                    Commission Amount
                </th>
                <th>
                    Enrolled On
                </th>
                <th>
                    Client City
                </th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plan.PlanName)
                    </td>
                    <td class="" style="font-weight:400">
                        @item.CoverageAmount.ToString("N0")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Frequency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimePeriod)
                    </td>

                    <td class="" style="font-weight:400">
                        @item.Premium.ToString("N0")
                    </td>
                    <td class="" style="font-weight:400">
                        @item.CommisionAmount.ToString("N0")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrolledOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.City.Name)
                    </td>
                    <td class="d-flex gap-3 flex-column flex-md-row ">
                        <a asp-action="Detail" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrows-angle-expand text-info" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M5.828 10.172a.5.5 0 0 0-.707 0l-4.096 4.096V11.5a.5.5 0 0 0-1 0v3.975a.5.5 0 0 0 .5.5H4.5a.5.5 0 0 0 0-1H1.732l4.096-4.096a.5.5 0 0 0 0-.707m4.344-4.344a.5.5 0 0 0 .707 0l4.096-4.096V4.5a.5.5 0 1 0 1 0V.525a.5.5 0 0 0-.5-.5H11.5a.5.5 0 0 0 0 1h2.768l-4.096 4.096a.5.5 0 0 0 0 .707" />
                            </svg>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square text-primary" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>

                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3 text-danger" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function submitForm() {
        document.getElementById('cardForm').submit();
    }
</script>

