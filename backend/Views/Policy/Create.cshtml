@model RepositryAssignement.Models.PolicyEnrollment;


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CustomeLayout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css?family=Arapey:400,400i,600|Open+Sans:300" rel="stylesheet">
    <style>
 

        *,
        *:after,
        *:before {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .timeline {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }

            .timeline .events {
                position: relative;
                background-color: #606060;
                height: 3px;
                width: 100%;
                border-radius: 4px;
                margin: 5em 0;
            }

                .timeline .events ol {
                    margin: 0;
                    padding: 0;
                    text-align: center;
                }

                .timeline .events ul {
                    list-style: none;
                }

                    .timeline .events ul li {
                        display: inline-block;
                        margin: 0;
                        padding: 0;
                    }

                        .timeline .events ul li a {
                            font-family: 'Arapey', sans-serif;
                            font-style: italic;
                            font-size: 1.25em;
                            color: #606060;
                            text-decoration: none;
                            position: relative;
                            top: -32px;
                            padding: 0 15px;
                        }

                            .timeline .events ul li a:after {
                                content: '';
                                position: absolute;
                                bottom: -25px;
                                left: 50%;
                                transform: translateX(-50%);
                                height: 20px;
                                width: 20px;
                                border-radius: 50%;
                                border: 3px solid #606060;
                                background-color: #fff;
                                transition: 0.3s ease;
                            }

                            .timeline .events ul li a:hover::after {
                                background-color: #194693;
                                border-color: #194693;
                            }

                            .timeline .events ul li a.selected:after {
                                background-color: #194693;
                                border-color: #194693;
                            }

        .events-content {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            margin-top: 20px;
        }

            .events-content li {
                display: none;
                list-style: none;
            }

                .events-content li.selected {
                    display: block;
                }

                .events-content li h2 {
                    font-family: 'Frank Ruhl Libre', serif;
                    font-weight: 500;
                    color: #919191;
                    font-size: 2.5em;
                }

    .neon-box {
        position: relative;
        background-color: #ffffff;
        border:black;
        border-radius: 30px;
         box-shadow: 0 0 20px rgb(199,212,255);
        animation: neon-glow 1s infinite alternate;
    }

        a {
            color: inherit; /* Use the color inherited from the parent */
            text-decoration: none; /* Remove default underline */
        }


        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    </style>
</head>
<body >


    <div class="d-flex flex-column gap-4">
    <div class="d-flex gap-5 justify-content-start align-items-center">
