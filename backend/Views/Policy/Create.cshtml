            <p class="w-100 text-center py-2 text-white" style="background-color: #013ADE; border-radius: 30px 30px 0 0;">Details</p>
                <form method="post">
                <input hidden type="text" vaule="@ViewBag.PlanId" name="planId"/>
                    <div class="d-flex flex-column gap-3 justify-content-center align-items-center px-3 ">
                        <div class="text-center">
                            <h6 style="font-weight: 600; font-size:16px;" id="premium"></h6>
                            <h6 style="font-weight: 600; font-size:16px;">for @ViewBag.TimePeriod Years</h6>
                        </div>
                        

                        <input asp-for="Premium" class="form-control" name="Premium" id="premiumInput" style="display: none;" />
                        <input asp-for="CoverageAmount" class="form-control" name="CoverageAmount" id="coverageAmount" style="display: none;" />
                        <input hidden type="text" asp-for="PlanId" vaule="@ViewBag.PlanId" name="PlanId" />

                        <button class="btn btn-outline-primary btn-sm" type="submit">Choose</button>
                    </div>
                </form>
            <hr />
                <p asp-items ="ViewBag.Premium" style="margin-top:-10px; color:#008000;font-weight: 600; font-size:16px;  " id="rangeLabel">5 Lakhs</p>
                <p>&#10004;</p>
                <p >&times;</p>
                <p>&#10004</p>
        </div>
    </div>
    </div>

    <script>
        const rangeInput = document.getElementById('customRange3');
        const premiumDisplay = document.getElementById('premium');
        const premiumInput = document.getElementById('premiumInput');
        const rangeValueDisplay = document.getElementById('rangeValue');
        const rangeLabel = document.getElementById('rangeLabel');
        const totalAmount = document.getElementById('coverageAmount');


        function goBack() {
            window.history.back();
        }

        function calculatePremium() {
            // Update the displayed value when the input value changes
            rangeValueDisplay.textContent = rangeInput.value + " Lakhs";
            rangeLabel.textContent = rangeInput.value + " Lakhs";
            
            
            // Calculate the premium rate based on the range input value
            const premiumRate = 0.08; // Premium rate per lakh
            const sumInsured = rangeInput.value * 100000; // Convert range value to sum insured in rupees
            
            console.log(sumInsured)
            const calculatedPremium = sumInsured /( @ViewBag.TimePeriod * 1);
          
            var timePeriod = @ViewBag.TimePeriod;
            // Update the premium text content
            premiumInput.value = calculatedPremium.toFixed(2); // Set the value of the hidden input field to the calculated premium
            premiumDisplay.textContent = "₹" + calculatedPremium.toFixed(2) + `/ year` ; // Update the displayed premium value
            totalAmount.value = sumInsured;
            
        }

        // Update premium when the range input value changes
        rangeInput.addEventListener('input', calculatePremium);

        // Initial calculation on page load
        calculatePremium();
    </script>
</body>
</html>
