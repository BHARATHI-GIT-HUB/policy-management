@{
    string? message = TempData["ErrorMessage"] as string;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Login </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PolicyManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css?family=Arapey:400,400i,600|Open+Sans:300" rel="stylesheet">
    <style>
        .custom-bg {
            background-color: #EAEFFF !important;
        }
 
    </style>
</head>
<body class="custom-bg position-relative">
    <nav class="navbar navbar-expand-lg bg-light px-5  shadow-sm custom-bg">

        <a class="navbar-brand d-flex gap-2 justify-content-center align-items-center " href="#">
            <img src="@Url.Content("~/Assert/Image/download.png")" alt="Image" style="border-radius:50px ; width:45px ; margin:0 10px 0 0" class="pl-5 p-md-0" />
            
            <h4 class="text-32 text-md-28 text-xs-24 text-black text-wrap">
                Policy Management Application
            </h4>
        </a>
        <button class="navbar-toggler" style="font-size:15px; font-weight:700;color:black" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        
    </nav>


    <div class="d-flex flex-column flex-lg-row justify-content-center  align-items-center mt-5 w-100 gap-5 px-3 ">
        <div class="position-relative">
            <div class="d-none d-sm-block position-absolute p-14 text-center w-75 p-2" style="top:30px; left:70px; background-color:#f2f5ff; border:8px solid #d5e4ff;">
                <h2 class="text-32 text-md-28 text-xs-24">
                    Let's find you
                    the Best Insurance
                </h2>
                <p class="mt-10 text-14-xs">PMA is your financial safety shield that secures you from emergency medical expenses.</p>
            </div>
            <div class="d-none d-sm-block">
            <img src="@Url.Content("~/Assert/Logo/banner-image.svg")" alt="Image" style="max-width:80vw;" />
        </div>
        </div>
        <main role="main" class="pb-3 " style="width: 350px; max-width:90vw;">
                @RenderBody()
         </main>


        
            @if(!string.IsNullOrEmpty(message)){

                <div class="alert alert-danger d-flex gap-3 align-items-center position-absolute" style="right:10px; top:12px" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle-fill text-danger" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                    </svg>           <div>
                        @message
                    </div>
                </div>
                }
            
       
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
